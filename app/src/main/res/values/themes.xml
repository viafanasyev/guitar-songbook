<resources>
    <style name="Theme.GuitarSongbook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/amber_200</item>
        <item name="colorPrimaryVariant">@color/amber_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/brown_500</item>
        <item name="colorSecondaryVariant">@color/brown_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="android:statusBarColor">@color/brown_700</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="android:navigationBarColor">@color/brown_700</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <item name="textInputStyle">@style/TextInputLayout</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/bg_toolbar</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@drawable/bg_bottomnav</item>
        <item name="itemIconTint">@color/fg_bottomnav</item>
        <item name="itemTextColor">@color/fg_bottomnav</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/amber_500</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/fg_textinputlayout</item>
        <item name="hintTextColor">@color/fg_textinputlayout</item>
        <item name="boxStrokeColor">@color/fg_textinputlayout</item>
        <item name="itemStrokeColor">@color/red_500</item>
        <item name="errorTextColor">@color/red_500</item>
        <item name="errorIconTint">@color/red_500</item>
        <item name="boxStrokeErrorColor">@color/red_500</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/amber_500</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/AlertDialogButton</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/amber_500</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetDialogShapeAppearance</item>
    </style>

    <style name="BottomSheetDialogShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>